<section class="single-book">
  <% let regex = /(^a\s|^the\s)/i %>
  <%let newArray = homeArray.sort((a,b) => a.title.replace(regex,'') < b.title.replace(regex,'') ? -1 : 1) %>
      <% newArray.forEach( book => { %>
      <form action="/books" method="POST">
          <input type=hidden name="image_url" value="<%=book.image_url%>" />
          <img src=<%= book.image_url %> 
          alt= <%= book.title %> 
          />
          <input type=hidden name="title" value="<%=book.title%>" />
          <h2><%= book.title %></h2>
          <input type=hidden name="authors" value="<%=book.authors%>" />
          <h3><%= book.authors.split(',').join(', ') %></h3>
          <input type=hidden name="description" value="<%=book.description%>" />
          <input type=hidden name="isbn" value="<%=book.isbn%>" />
          <input type=hidden name="bookshelf" value="<%=book.bookshelf%>" />
          <p><%= book.bookshelf %></p>
          <button class="submitButton" type="submit">Show Details</button>
      </form>
  <% }) %>
</section>